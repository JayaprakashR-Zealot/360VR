<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerInParent="true"
    tools:context="com.VR.video_cardboard.HomeActivity">

    <Button
        android:id="@+id/btnPanoVideo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="360Â° Videos"
        android:onClick="onPanoVideoClick"
        />

    <Button
        android:id="@+id/btnVRInteraction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="VR Interaction"
        android:layout_below="@+id/btnPanoVideo"
        android:onClick="onVRInteractionClick"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/vr_icon"
        android:layout_below="@+id/btnVRInteraction"
        />

</RelativeLayout>
